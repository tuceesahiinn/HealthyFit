
@{
    Layout = null;
}
<script src="~/login/login/src/script.js"></script>
<link href="~/login/login/src/style.css" rel="stylesheet" />
<div class="wrapper">
    <div class="sign-panels">

        <div class="signup">
            <div class="title">
                <span>Kayıt Ol</span>

            </div>

            <br />

            <div>
                <form action="/KayitOl/KayitOl/" method="post"> 
                    <input type="text" placeholder="TC" name="TC">
                    <input type="text" placeholder="Ad" name="Ad">
                    <input type="text" placeholder="Soyad" name="Soyad">
                    <input type="text" placeholder="Salon Id" name="SalonId">
                    <input type="text" placeholder="Kullanıcı Adı" name="KullaniciAd">
                    <input type="password" placeholder="Şifre" name="Sifre">
                    <button type="submit">Kayıt Ol</button>
                    <a href="/GirisYap/GirisYap/" class="btn-login btn-fade">
                        Zaten üye misin? Giriş Yap! <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                    </a>
                    <a href="/Anasayfa/Index/" class="btn-member btn-fade">
                        Anasayfaya Dön <i class="fa fa-long-arrow-right"
                                          aria-hidden="true"></i>
                    </a>
                </form>
            </div>
        </div>


    </div>
</div>

