
@{
    Layout = null;
}
<script src="~/login/login/dist/script.js"></script>
<link href="~/login/login/dist/style.css" rel="stylesheet" />
<div class="wrapper">
    <div class="sign-panels">
        <div class="login">
            <div class="title">
                <span>Kullanıcı Giriş</span>

            </div>


            <br />

            @using (Html.BeginForm("GirisYap", "GirisYap", FormMethod.Post))
            {
                <input type="text" placeholder="Kullanıcı Adı" name="KullaniciAd">
                <input type="password" placeholder="Şifre" name="Sifre">
                <input type="checkbox" id="remember">
                <button type="submit" >Giriş Yap</button>

                <a href="/GirisYap/YoneticiGirisYap/" class="btn-member btn-fade">
                    Yönetici Olarak Giriş Yap  <i class="fa fa-long-arrow-right"
                                                  aria-hidden="true"></i>
                </a>
                <a href="/KayitOl/KayitOl/" class="btn-member btn-fade">
                    Hey! Hala daha üye değil misin? <i class="fa fa-long-arrow-right"
                                                       aria-hidden="true"></i>
                </a>
                <a href="/Anasayfa/Index/" class="btn-member btn-fade">
                    Anasayfaya Dön <i class="fa fa-long-arrow-right"
                                      aria-hidden="true"></i>
                </a>
              
            }
        </div>

       
      
    </div>
</div>

