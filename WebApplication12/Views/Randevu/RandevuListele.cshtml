@using WebApplication12.Models.Entity
@model List<Randevu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_KullaniciLayout.cshtml";
}
<h2>Randevularım</h2>
<table class="table table-striped">
    <tr>
        <th>Randevu Id</th>
        <th>Salon Id</th>
        <th>Personel Id</th>
        <th>Personel Türü</th>
        <th>Müşteri Id</th>
        <th>Tarih Saat</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>

            <td>@x.RandevuId</td>
            <td>@x.SalonId</td>
            <td>@x.PersonelId</td>
            <td>@x.PersonelTuru</td>
            <td>@x.MusteriId</td>
            <td>@x.TarihSaat</td>
            <td><a href="/Randevu/RandevuSil/@x.RandevuId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Randevu/RandevuGetir/@x.RandevuId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>


